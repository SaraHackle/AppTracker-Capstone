@model AppTrackerMVC.Models.ViewModels.ApplicationDetailViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ApplicationTag</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ApplicationTag.ApplicationId" class="control-label"></label>
                <select asp-for="ApplicationTag.ApplicationId" class="form-control">
                    <option value="">Select Company</option>
                    @foreach (Application application in Model.Applications)
                    {
                        <option value="@application.Id">@application.Company</option>
                    }
                </select>
                <span asp-validation-for="ApplicationTag.ApplicationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationTag.TagId" class="control-label"></label>
                <select asp-for="ApplicationTag.TagId" class="form-control">
                    <option value="">Select Tag</option>
                    @foreach (var tag in Model.Tags)
                    {
                        <option value="@tag.Id">@tag.TagName</option>
                    }
                </select>
                <span asp-validation-for="ApplicationTag.TagId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
