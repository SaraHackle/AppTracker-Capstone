@model AppTrackerMVC.Models.ViewModels.InterviewViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Interview</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Interview.InterviewDate" class="control-label"></label>
                <input asp-for="Interview.InterviewDate" class="form-control" />
                <span asp-validation-for="Interview.InterviewDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Interview.AdditionalInfo" class="control-label"></label>
                <input asp-for="Interview.AdditionalInfo" class="form-control" />
                <span asp-validation-for="Interview.AdditionalInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Interview.ApplicationId" class="control-label"></label>
                <select asp-for="Interview.ApplicationId" class="form-control">
                    <option value="">Select Company</option>
                    @foreach (var application in Model.Applications)
                    {
                        <option value="@application.Id">@application.Company</option>
                    }
                </select>
                <span asp-validation-for="Interview.ApplicationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
