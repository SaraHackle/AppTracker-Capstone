@model AppTrackerMVC.Models.ViewModels.ApplicationDetailViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Application</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Application.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Application.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Application.Company)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Application.Company)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Application.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Application.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Application.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Application.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Application.DateApplied)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Application.DateApplied)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Application.Salary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Application.Salary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Application.UserId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Application.UserId)
        </dd>
    </dl>
</div>
<div>
    @foreach (Interview interview in Model.Interviews)
    {
        <li class="list-group-item disabled" aria-disabled="true">
            <p> InterviewDate: @interview.InterviewDate </p>
            <p>Additional Info: @interview.AdditionalInfo</p>

        </li>
        <br />
        <a asp-controller="Interview" asp-action="Edit" asp-route-id="@interview.Id"> Edit This Interview |</a>
        <a asp-controller="Interview" asp-action="Create"> Add an Interview </a>
    }
</div>


<br/>
<div>
    
    @Html.ActionLink("Edit", "Edit", new { Id = Model.Application.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
